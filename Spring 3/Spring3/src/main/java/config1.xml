<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">
                           
	<bean class="Problem1.Spring3.Address" name="address">
	<!--In name="address" , where "address" variable is present in the Employee class-->
	<property name="street" value="Block man street" />
	<property name="city" value="Kolkata" />
	</bean>
	<bean class="Problem1.Spring3.Employee" name="emp" autowire="byType" /> 
</beans>